<!--pages/show/show.wxml-->
<view class="bg-img">
  <image style="width: 100%; height: 100%" src="https://cdn.pixabay.com/photo/2017/08/28/17/39/poster-2690541_960_720.png" />
</view>

<view class="poster-img">
  <image style="width: 100%; height: 100%" src="https://cdn.pixabay.com/photo/2017/08/28/17/39/poster-2690541_960_720.png" />
</view>

<view class="show-head-text"></view>
    <view class="bold">{{name}}</view>
    <view class="p">City: {{city}}</view>
    <view class="p">Price: {{price}}</view>

<view class="pa40 text-center">
  <view class="pl20 pr20">Venue: {{venue}}</view>
  <view class="pl20 pr20">Date: {{date}}</view>
</view>
 
<view class="pa40 text-center">
  <block>
    <view class="highlight">{{highlight}}</view>
    <image class="w50 radius40 shadow" style="height: 360rpx;" src="https://source.unsplash.com/500x100/?theatre" mode="aspectFill"/>
    <view class="p">Descrption: {{description}}</view>
    <navigator>View more</navigator>
  </block>
</view>

<button class='btn-edit' bindtap="goToEditPage" data-id="{{id}}">edit</button>
<button class='btn-delete' bindtap="goToIndexPage">delete</button>